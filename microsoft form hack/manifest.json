{
  "manifest_version": 3,
  "name": "Microsoft Form Auto Answer",
  "version": "1.0",
  "description": "Tự động chọn đáp án trắc nghiệm trên Microsoft Forms.",
  "permissions": ["scripting", "storage"],
  "host_permissions": [
    "https://forms.office.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://forms.office.com/*"],
      "js": ["content.js"]
    }
  ]
} 